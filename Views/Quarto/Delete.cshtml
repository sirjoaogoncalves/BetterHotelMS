@model GestaoHotelJoao.Models.Quarto

@{
ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/css/Quarto/delete.css" rel="stylesheet" />
</head>
<h1>Tem a certeza que quer remover este quarto?</h1>
<hr />
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Tipo de Quarto</th>
                <th>Custo por Noite</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.TipoQuarto)</td>
                <td>@Html.DisplayFor(model => model.CustoNoite)</td>
            </tr>
        </tbody>
    </table>
    <hr class="my-4">
    <form asp-action="Delete" class="action-buttons" onsubmit="return confirmDelete()">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Apagar <i class="fas fa-trash"></i></button>
        <a asp-action="Index" class="btn btn-primary">Voltar <i class="fas fa-arrow-left"></i></a>
    </form>
</div>

<!-- modal -->

<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirmar</h5>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja remover este quarto?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancelButton">Cancelar</button>
                <button type="submit" class="btn btn-primary" id="confirmButton">Confirmar</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/delete.js"></script>
