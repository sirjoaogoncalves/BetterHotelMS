@model GestaoHotelJoao.Models.User

@{
ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/css/User/edit.css" rel="stylesheet" />
</head>
<style>
</style>

<h1>Editar utilizador</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="checkbox-container">
                    <input class="form-check-input" asp-for="Administrador" />
                    <span class="checkmark"></span>
                    <span class="checkbox-label">@Html.DisplayNameFor(model => model.Administrador)</span>
                </label>
            </div>
            <div class="form-group form-check">
                <label class="checkbox-container">
                    <input class="form-check-input" asp-for="Funcionario" />
                    <span class="checkmark"></span>
                    <span class="checkbox-label">@Html.DisplayNameFor(model => model.Funcionario)</span>
                </label>
            </div>
            <div class="form-group actions">
                <button type="submit" class="btn btn-primary">Salvar <i class="fas fa-save"></i></button>
                <a asp-action="Index" class="btn btn-default">Voltar <i class="fas fa-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

<hr class="my-4" />
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
