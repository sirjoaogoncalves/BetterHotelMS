@model GestaoHotelJoao.Models.Quarto

@{
ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/css/Quarto/edit.css" rel="stylesheet" />
</head>

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TipoQuarto" class="control-label"></label>
                <input asp-for="TipoQuarto" class="form-control" />
                <span asp-validation-for="TipoQuarto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustoNoite" class="control-label"></label>
                <input asp-for="CustoNoite" class="form-control" />
                <span asp-validation-for="CustoNoite" class="text-danger"></span>
            </div>
            <div class="form-group actions">
                <button type="submit" class="btn btn-primary">Salvar <i class="fas fa-save"></i></button>
                <a asp-action="Index" class="btn btn-default">Voltar <i class="fas fa-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
